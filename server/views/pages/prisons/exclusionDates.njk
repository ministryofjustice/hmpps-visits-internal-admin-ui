{% extends "../../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{%- from "govuk/components/back-link/macro.njk" import govukBackLink -%}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{%- from "moj/components/sub-navigation/macro.njk" import mojSubNavigation -%}
{%- from "govuk/components/tag/macro.njk" import govukTag -%}
{% from "moj/components/page-header-actions/macro.njk" import mojPageHeaderActions %}
{%- from "moj/components/banner/macro.njk" import mojBanner -%}

{% set pageHeaderTitle = prisonName %}
{% set pageTitle = applicationName + " - " + pageHeaderTitle %}
{% set primaryNavItems = [
  {
    text: "Home",
    href: "/"
  },
  {
    text: "Prisons",
    href: "/prisons",
    active: true
  }
  ] %}
{% block content %}
    <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <h1 class="govuk-heading-l">
        <span>{{ pageHeaderTitle }}</span>
      </h1>

      <p>This prison is currently
        {{ govukTag({
          text: "active" if prison.active else "inactive",
          classes: "govuk-tag--blue" if prison.active else "govuk-tag--grey",
          attributes: { "data-test": "prison-status" }
        }) }}
      </p>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      {{ mojSubNavigation({
        label: "Sub navigation",
        classes: "govuk-!-margin-top-3",
        items: [{
          text: "Session templates",
          href: "/prisons/" + prison.code + "/session-templates"
        }, {
          text: "Exclusion dates",
          href: "/prisons/" + prison.code + "/exclusion-dates",
          active: true
        }, {
          text: "Category groups",
          href: "/prisons/" + prison.code + "/category-groups"
        }, {
          text: "Incentive level groups",
          href: "/prisons/" + prison.code + "/incentive-groups"
        }, {
          text: "Location groups",
          href: "/prisons/" + prison.code + "/location-groups"
        }, {
          text: "Status",
          href: "/prisons/" + prison.code + "/status",
          attributes: { "data-test": "tab-status" }
        }]
      }) }}


      {% include "partials/errorSummary.njk" %}
      {% if message | length %}
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
            {{ mojBanner({
              type: "success",
              text: message,
              iconFallbackText: "Success"
            }) }}
          </div>
        </div>
      {% endif %}

      {{ mojPageHeaderActions({
        heading: {
          text: 'Exclusion dates',
          level: 2,
          classes: 'govuk-heading-m'
        },
        items: []
      }) }}

      {# Show message if excludeDates empty #}
      {# Build rows for exclude dates #}
      {% if excludeDates | length %}
        {% set excludeDateRows = [] %}
        {% for excludeDate in excludeDates -%}
          {% set excludeDateRows = (excludeDateRows.push([
          {
            text: excludeDate[0],
            attributes: { "data-test": "excluded-date" }
          },
          {
            html: govukButton({
              text: 'Remove',
              value: excludeDate[1],
              name: 'excludeDate',
              attributes: { "data-test": "remove-date-button" }
            }),
            attributes: { "data-test": "exclude-date-row" }
          }
          ]), excludeDateRows) %}
        {%- endfor %}
        <form action="/prisons/{{ prisonId }}/exclude-date/remove" method="POST" novalidate>
          <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            {{ govukTable({
            classes: "govuk-!-width-three-quarters",
            head: [
              {
                text: "Excluded date"
              },
              {
                text: "Action"
              }
            ],
            rows: excludeDateRows
          }) }}
          </form>
        {% else %}
          <p class="govuk-body">
            No existing dates to exclude
          </p>
        {% endif %}
        <form action="/prisons/{{ prisonId }}/exclude-date/add" method="POST" novalidate>
          <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            {{ govukDateInput({
                  id: "excludeDate",
                  fieldset: {
                    legend: {
                      text: "Add exclusion date",
                      classes: "govuk-fieldset__legend--m"
                    }
                  },
                  hint: {
                    text: "For example, 27 03 2023"
                  },
                  items: [
                    {
                      label: "Day",
                      name: "validExcludeDate[day]",
                      classes: "govuk-input--width-2",
                      autocomplete: "off"
                    },
                    {
                      label: "Month",
                      name: "validExcludeDate[month]",
                      classes: "govuk-input--width-2",
                      autocomplete: "off"
                    },
                    {
                      label: "Year",
                      name: "validExcludeDate[year]",
                      classes: "govuk-input--width-4",
                      autocomplete: "off"
                    }
                  ],
                  errorMessage: errors | findError('templateName')
                }) }}
            {{ govukButton({
                text: "Add",
                preventDoubleClick: true,
                attributes: { "data-test": "submit" }
                }) }}
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}